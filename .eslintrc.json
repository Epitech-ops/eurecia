{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier"
  ],
  "ignorePatterns": [
    "*.spec.ts"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "project": [ "tsconfig.json" ]
  },
  "rules": {
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "no-unused-vars": "off",
    "func-names": "off",
    "class-methods-use-this": "off"
  }
}